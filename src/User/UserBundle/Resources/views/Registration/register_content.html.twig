{% trans_default_domain 'FOSUserBundle' %}
<div class="container register">
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" >
        {{ form_widget(form._token) }}
        <div class="panel-heading"> <span >S'inscrire gratuitement</span></div>
        <div class="col-xs-6 ">
            <div class="panel panel-default">   
                <div class="panel-body">

                    {{ form_errors(form.nom) }}
                    {{ form_widget(form.nom, {'attr' : {'placeholder' : 'Nom '} }) }}<br>


                    {{ form_errors(form.prenom) }}
                    {{ form_widget(form.prenom, {'attr' : {'placeholder' : 'Prénom ' } }) }}<br>
                    {{ form_widget(form.username, {'attr' : {'name' : 'pseudo','placeholder' : 'Pseudo'} }) }}<br>
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr' : {'placeholder' : 'Adresse éléctronique'} }) }}<br>
                    {{ form_widget(form.plainPassword.first, {'attr' : {'placeholder' : 'Mot de passe'} }) }}<br>
                    {{ form_widget(form.plainPassword.second, {'attr' : {'placeholder' : 'Confirmer votre mot de passe'} }) }}<br>
                    {{ form_widget(form.profil, {'attr' : {'placeholder' : 'profil'} }) }}<br>
                    {{ form_widget(form.activite, {'attr' : {'placeholder' : 'secteur d activiter','class':'form-control cacher-block'} }) }}<br>
                </div>
            </div>

            <div>
                <input class="btn btn-default" type="submit" value="Valider" />
            </div>
        </div>

    </form>
    {% block javascripts %}
        <script src="{{asset('assets/js/jquery-2.0.3.min.js')}}"></script>
        <script >
            $("#fos_user_registration_form_profil").change(function() {
                if ($("#fos_user_registration_form_profil").val() == 'Entreprise')
                {
                    $("#fos_user_registration_form_activite").show();

                } else {
                    $("#fos_user_registration_form_activite").hide();
                }

            });



        </script>

    {% endblock %}
</div>